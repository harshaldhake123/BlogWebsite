<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitleId">Title</label>
        <input class="form-control" autocomplete="off" id="postTitleId" name="postTitle" type="text" placeholder="Title">
    </div>
    <div class="form-group">
        <label for="postBodyId">Post</label>
        <textarea id="postBodyId" autocomplete="off" class="form-control span6" rows="5" name="postBody" placeholder="Compose Here"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="publish">Publish</button>
</form>

<%- include("partials/footer") -%>