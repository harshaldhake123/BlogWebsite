<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= homeContent %></p>

<% posts.forEach(function (post) { %>
    <h1><%= post.postTitle %></h1>
    <% if(post.postBody.length > 100){ %>
        <p>
            <%= post.postBody.substr(0, 100) + "..." %>
            <a href="/posts/<%= post.postTitle %>">Read More</a>
        </p>
    <% } %>
<% }); %>



<%- include("partials/footer") -%>